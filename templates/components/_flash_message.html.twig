{% for label, messages in app.flashes %}
    {% for message in messages %}
        <div class="row g-0 justify-content-end bg-white pe-2">
            <div class="liveToast card col-6 col-lg-4 border-2 position-absolute mt-4" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="card-body text-white text-center bg-{{ label }} p-3">
                    {{ message }}
                </div>
            </div>
        </div>
    {% endfor %}
{% endfor %}
