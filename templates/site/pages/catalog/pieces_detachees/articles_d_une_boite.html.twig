														{% for item in group.items|sort %}
															
																{% if  item.stockForSale > 0 %}
																	<option value="{{ item.id }}" data-image="{{ item.image }}">{{ item.name }} : {{ (item.priceExcludingTax * ( 1 + (tax.value / 100)) / 100) | number_format(2, '.', ',') }} € TTC - (Stock: {{ item.stockForSale }})</option>
