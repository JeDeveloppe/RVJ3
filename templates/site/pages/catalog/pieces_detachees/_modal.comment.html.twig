<!-- Button trigger modal -->

<div class="col-5 text-end">
    <i class="clickableAwesomeFont fa-solid fa-circle-question text-purple fa-2x" data-bs-toggle="modal" data-bs-target="#exampleModal{{ item.id }}"></i>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModal{{ item.id }}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Information(s) sur l'article</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                {{ item.comment }}
            </div>
        </div>
    </div>
</div>