{% extends "components/_base.html.twig" %}

{% block title %}Notre Boutique{% endblock %}

{% block body %}

<div class="row g-0 justify-content-center align-items-center py-5">
    <div class="col-11 col-md-8 text-center">
        <h1 class="text-purple">Notre Boutique</h1>
        <p class="mt-4">
            Découvrez notre point de vente et trouvez les informations qu'il vous faut !
        </p>
    </div>
</div>

{% for store in stores %}
    <div class="row g-0 justify-content-center bg-light py-4">
        <div class="col-11 col-md-8 p-4">
            <div class="card h-100 p-3 shadow-sm border-0">
                <div class="row g-0">

                    <div class="col-12 col-lg-6 p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa-solid fa-location-dot fa-2x text-purple me-3"></i>
                            <h3 class="h5 m-0">Nous trouver</h3>
                        </div>
                        <p>
                            <b>Adresse :</b><br>
                            {{ store.street }}<br>
                            {{ store.city }}
                        </p>
                    </div>

                    <div class="col-12 col-lg-6 p-4">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa-solid fa-clock fa-2x text-purple me-3"></i>
                            <h3 class="h5 m-0">Horaires</h3>
                        </div>
                        <table class="table table-borderless table-sm">
                            <tbody>
                                {% set now = "now"|date("U") %}
                                {% set currentDay = "now"|date("l", "Europe/Paris") %}
                                {% set frenchDays = {
                                    'Monday': 'Lundi', 'Tuesday': 'Mardi', 'Wednesday': 'Mercredi',
                                    'Thursday': 'Jeudi', 'Friday': 'Vendredi', 'Saturday': 'Samedi',
                                    'Sunday': 'Dimanche'
                                } %}
                                
                                {% set last_day = '' %}
                                {% for hour in store.openingHours %}
                                    {% if hour.dayOfWeek != last_day %}
                                        <tr {% if hour.dayOfWeek == frenchDays[currentDay] %}class="fw-bold text-success bg-light"{% endif %}>
                                            <td><b>{{ hour.dayOfWeek }}:</b></td>
                                            <td>
                                                {% if hour.isClosed %}
                                                    Fermé
                                                {% else %}
                                                    {{ hour.openingTime }} - {{ hour.closingTime }}
                                                {% endif %}
                                            </td>
                                        </tr>
                                        {% set last_day = hour.dayOfWeek %}
                                    {% else %}
                                        <tr {% if hour.dayOfWeek == frenchDays[currentDay] %}class="fw-bold bg-light"{% endif %}>
                                            <td></td>
                                            <td>
                                                {% if not hour.isClosed %}
                                                    et {{ hour.openingTime }} - {{ hour.closingTime }}
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endif %}
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>

                    <div class="col-12 mt-4 p-4">
                        <iframe src="{{ store.googleMapUrl }}" 
                                width="100%" 
                                height="300" 
                                style="border:0;" 
                                allowfullscreen="" 
                                loading="lazy" 
                                referrerpolicy="no-referrer-when-downgrade">
                        </iframe>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-0 justify-content-center bg-light py-4">
        <div class="col-11 col-md-8">
            <h2 class="text-center mb-4">Photos de la boutique</h2>

            {% if store.storePhotos is defined and store.storePhotos|length > 0 %}
                <div class="row g-3">
                    {% for photo in store.storePhotos %}
                        <div class="col-6 col-md-4 col-lg-3">
                            {# Removed the <a> tag to make images static and non-clickable #}
                            <img src="{{ asset('uploads/images/stores/' ~ photo.fileName) }}"
                                class="img-fluid rounded shadow-sm w-100 h-100"
                                style="object-fit: cover; aspect-ratio: 1/1;"
                                alt="Photo de la boutique">
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                <p class="text-center">Aucune photo de la boutique n'est disponible pour le moment.</p>
            {% endif %}
        </div>
    </div>

{% endfor %}

<div class="row g-0 justify-content-center py-5">
    <div class="col-11 col-md-8 text-center">
        <h2>Une question ? Contactez-nous !</h2>
        <a href="{{ path('app_contact') }}" class="btn btn-dark text-uppercase mt-3">Nous contacter</a>
    </div>
</div>

{% endblock %}