<div class="col-11 col-md-8 my-4">
    <div class="card p-0 h-100">
        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
            <div class="span">{{ partner.name | raw }}</div>
            <div class="span">{{ partner.city.name }} ({{ partner.city.department.name }})</div>
        </div>
        <div class="card-body d-flex flex-wrap">
            <div class="col-6 col-sm-4 mx-auto col-md-3 col-lg-2 d-flex justify-content-center align-items-center">
                <img class="img-thumbnail" src="{{ vich_uploader_asset(partner, 'imageFile') }}" alt="Image du partenaire {{ partner.name }}"/>
            </div>
            <div class="col-12 col-md-9 col-lg-10 d-flex justify-content-start align-items-center p-4">
                {{ partner.description | raw }}
            </div>
            <div class="col-12 d-flex flex-wrap justify-content-around my-4">
                <div class="card col-12 col-md-5">
                    <div class="card-header">Collecte:</div>
                    <div class="card-body">{{ partner.collect | raw }}</div>
                </div>
                <div class="card col-12 col-md-5 mt-2 mt-md-0">
                    <div class="card-header">Vend:</div>
                    <div class="card-body">{{ partner.sells | raw }}</div>
                </div>
            </div>
            <div class="col-12 text-center">
                <a href="{{ partner.fullUrl }}" target='_blank' class="btn btn-info">Voir le site du partenaire</a>
            </div>
        </div>
    </div>
</div>