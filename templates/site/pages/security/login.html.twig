{% extends 'components/_base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="row">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3 bg-danger p-4 rounded text-center">
            Déjà connecté(e) en tant que : {{ app.user.userIdentifier }}<br/> <a href="{{ path('logout') }}">Me déconnecter</a>
        </div>
    {% endif %}
    <form method="post" class="col-11 col-sm-10 col-md-6 col-lg-5 col-xl-4 mx-auto my-5">
        <h1 class=" col-11 text-center my-4">Se connecter</span></h1>
        <input type="email" value="{{ last_username }}" name="email" placeholder="Adresse e-mail" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
        <input type="password" name="password" id="inputPassword" placeholder="Mot de passe" class="form-control mb-3" autocomplete="current-password" required>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <div class="col-12 d-flex justify-content-center">
        <button class="btn btn-yellow mt-4" type="submit">SE CONNECTER</button>
        </div>
        <div class="col-12 mt-4 text-center small">
            <a class="text-decoration-none text-purple" href="{{ path('app_register') }}">Pas encore client·e ? Créer un compte</a>
        </div>

    </form>
    <div class="col-11 mx-auto mb-4 d-flex justify-content-end small">
        <a class="text-purple text-decoration-none" href="{{ path('check_email') }}">Mot de passe oublié ?</a>
    </div>
</div>

{% endblock %}