{# templates/admin/my-custom-page.html.twig #}

{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}GRAPHIQUES & STATISTIQUES{% endblock %}

{% block main %}

    <div class="card p-4 mb-4 shadow-sm">
        <h4 class="card-title mb-4">
            <i class="fas fa-chart-line me-2"></i> Graphiques de Chiffre d'Affaires
        </h4>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 p-3 bg-light">
                    <form target="_blank" action="{{ path('jpgraph_ca_by_year') }}" method="get" class="d-flex flex-column h-100">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-euro-sign fa-2x text-success me-3"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Chiffre d'Affaires Total</h6>
                                <p class="text-muted small mb-0">Pièces détachées, articles, boîtes d'occasion.</p>
                            </div>
                        </div>
                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <select class="form-control me-2" name="year" required>
                                <option value="">Choisir une année...</option>
                                {% for i in 2021.."now"|date("Y") %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                            <button class="btn btn-primary" type="submit">Afficher</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 p-3 bg-light">
                    <form target="_blank" action="{{ path('jpgraph_ca_between_two_years') }}" method="get" class="d-flex flex-column h-100">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-chart-pie fa-2x text-info me-3"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Comparaison N / N-1</h6>
                                <p class="text-muted small mb-0">Comparaison du CA avec l'année précédente.</p>
                            </div>
                        </div>
                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <select class="form-control me-2" name="year" required>
                                <option value="">Choisir l'année N...</option>
                                {% for i in 2021.."now"|date("Y") %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                            <button class="btn btn-primary" type="submit">Afficher</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card p-4 mb-4 shadow-sm">
        <h4 class="card-title mb-4">
            <i class="fas fa-shopping-cart me-2"></i> Graphiques des Ventes
        </h4>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 p-3 bg-light">
                    <form target="_blank" action="{{ path('jpgraph_transactions_by_year') }}" method="get" class="d-flex flex-column h-100">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-line-chart fa-2x text-warning me-3"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Ventes par mois</h6>
                                <p class="text-muted small mb-0">Total des transactions par mois.</p>
                            </div>
                        </div>
                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <select class="form-control me-2" name="year" required>
                                <option value="">Choisir une année...</option>
                                {% for i in 2021.."now"|date("Y") %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                            <button class="btn btn-primary" type="submit">Afficher</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 p-3 bg-light">
                    <form target="_blank" action="{{ path('jpgraph_repartition_transactions_by_year') }}" method="get" class="d-flex flex-column h-100">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-chart-pie fa-2x text-danger me-3"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Répartition des ventes</h6>
                                <p class="text-muted small mb-0">Répartition des ventes par catégorie (pièces détachées, etc.).</p>
                            </div>
                        </div>
                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <select class="form-control me-2" name="year" required>
                                <option value="">Choisir une année...</option>
                                {% for i in 2021.."now"|date("Y") %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                            <button class="btn btn-primary" type="submit">Afficher</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="card p-4 mb-4 shadow-sm">
        <h4 class="card-title mb-4">
            <i class="fas fa-users me-2"></i> Autres Statistiques
        </h4>
        <div class="row g-4">
            <div class="col-md-6">
                <div class="card h-100 p-3 bg-light">
                    <form target="_blank" action="{{ path('jpgraph_repartition_boites_completed_by_year') }}" method="get" class="d-flex flex-column h-100">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-cubes fa-2x text-secondary me-3"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Jeux complétés</h6>
                                <p class="text-muted small mb-0">Répartition du nombre de jeux complétés par mois.</p>
                            </div>
                        </div>
                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <select class="form-control me-2" name="year" required>
                                <option value="">Choisir une année...</option>
                                {% for i in 2021.."now"|date("Y") %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                            <button class="btn btn-primary" type="submit">Afficher</button>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card h-100 p-3 bg-light">
                    <form target="_blank" action="{{ path('jpgraph_inscriptions_by_year') }}" method="get" class="d-flex flex-column h-100">
                        <div class="d-flex align-items-center mb-3">
                            <i class="fa fa-user-plus fa-2x text-primary me-3"></i>
                            <div class="flex-grow-1">
                                <h6 class="mb-0 fw-bold">Inscriptions sur le site</h6>
                                <p class="text-muted small mb-0">Nombre d'inscriptions par mois.</p>
                            </div>
                        </div>
                        <div class="mt-auto d-flex align-items-center justify-content-between">
                            <select class="form-control me-2" name="year" required>
                                <option value="">Choisir une année...</option>
                                {% for i in 2021.."now"|date("Y") %}
                                    <option value="{{ i }}">{{ i }}</option>
                                {% endfor %}
                            </select>
                            <button class="btn btn-primary" type="submit">Afficher</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

{% endblock %}